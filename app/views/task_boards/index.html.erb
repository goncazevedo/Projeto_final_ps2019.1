<p id="notice"><%= notice %></p>

<h1>Task Boards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Finished</th>
      <th>Goal board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_boards.each do |task_board| %>
      <tr>
        <td><%= task_board.name %></td>
        <td><%= task_board.description %></td>
        <td><%= task_board.finished %></td>
        <td><%= task_board.goal_board %></td>
        <td><%= link_to 'Show', task_board %></td>
        <td><%= link_to 'Edit', edit_task_board_path(task_board) %></td>
        <td><%= link_to 'Destroy', task_board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

