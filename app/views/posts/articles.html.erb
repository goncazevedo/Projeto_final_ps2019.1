<p id="notice"><%= notice %></p>

<div class="content">
  <section class="article">
      <h1>Artigos</h1>
      <div class="line"></div>


      <div class="list">
        <% @articles.each do |article| %>
            
              <div class="photo">
                <% if article.user.photo.present? %>
                  <%= image_tag (article.user.photo.url) %>
                <% end %>
              </div>

              <div class="item">
              <%= link_to article.title, article, :class => "title" %>
              <div class="description"> 
                criado por <%= article.user.name %>, em <%= article.created_at.to_date%>
              </div>

              <%if can? :edit, article%>
                  <%= link_to 'Editar', edit_post_path(article) %>
              <%end%>
              <%if can? :destroy, article%>
                  <%= link_to 'Apagar', article, method: :delete, data: { confirm: 'Tem certeza que deseja apagar?' } %>
              <%end%>
              </div>
            
        <% end %>
      




    <%= link_to 'Nova postagem', new_article_path, :class => "button_new" %>
    </section>
</div>