<p id="notice"><%= notice %></p>

<div class="content">
  <div class="article_title">
    <h1>Artigos</h1>
    <div class="article_titleLine"></div>
  </div>

  <table>
    <%# <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead> %>

    <tbody>
      <% @articles.each do |article| %>
          <tr>
            <td>
              <% if article.user.photo.present? %>
                <%= image_tag (article.user.photo.url) %>
              <% end %>
            </td>
            <td><%= article.user.name %></td>
            <td><%= link_to article.title, article %></td>
            <td><%= article.created_at.to_date%></td>
            <%if can? :edit, article%>
                <td><%= link_to 'Edit', edit_post_path(article) %></td>
            <%end%>
            <%if can? :destroy, article%>
                <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
          </tr>
      <% end %>
    </tbody>
  </table>

  <br>



  <%= link_to 'New Post', new_article_path %>
</div>