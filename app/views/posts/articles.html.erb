<p id="notice"><%= notice %></p>

<h1>Artigos</h1>

<%= form_tag(articles_path, method: :get) do %>
  Filtro:<%= select_tag :tag, options_for_select(tags_select),{:prompt => "escolha uma tag"} %>
  Titulo:<%= text_field_tag :title,params[:title] %>
  <%= submit_tag 'Search' , name: nil%>
<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
        <tr>
          <td>
            <% if article.user.photo.present? %>
              <%= image_tag (article.user.photo.url) %>
            <% end %>
          </td>
          <td><%= article.user.name %></td>
          <td><%= article.title %></td>
          <td><%= article.created_at.to_date%></td>
          <td><%= link_to 'Show', article %></td>
          <%if can? :edit, article%>
              <td><%= link_to 'Edit', edit_post_path(article) %></td>
          <%end%>
          <%if can? :destroy, article%>
              <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        </tr>
    <% end %>
  </tbody>
</table>

