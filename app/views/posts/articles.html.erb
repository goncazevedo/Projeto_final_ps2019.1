<p id="notice"><%= notice %></p>

<h1>Artigos</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.user.name %></td>
            <td><%= article.title %></td>
            <td><%= article.content %></td>
            <td><%= article.photo %></td>
            <td><%= link_to 'Show', article %></td>
            <%if can? :edit, article%>
                <td><%= link_to 'Edit', edit_post_path(article) %></td>
            <%end%>
            <%if can? :destroy, article%>
                <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
        </tr>
    <% end %>
  </tbody>
</table>

