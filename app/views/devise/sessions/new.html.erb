<section id="home_login">

  <%= image_tag("logo-in.png", alt: "logo-in", class: "logo-in") %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="home_login_field">
      <%= f.label :email, class:"home_login_field-email" %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="home_login_field">
        <%= f.label :password, class:"home_login_field-password" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="inline">
      <% if devise_mapping.rememberable? %>
        <div class="field" id="field-remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
    </div>     
      <% end %>

      <%= render "devise/shared/links" %> 
    
      
    <div class="home_login_actions">
      <%= f.submit "ENTRAR", class:"home_login_button" %>
    </div>
  <% end %>

   </div>
</section>